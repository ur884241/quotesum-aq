{
  "version": 2,
  "builds": [
      {
          "src": "api/*.py",
          "use": "@vercel/python"
      }
  ],
  "routes": [
      {
          "src": "/api/(.*)",
          "dest": "api/$1.py"
      },
      {
          "src": "/(.*)",
          "dest": "/public/index.html"  // Pointing to the HTML file in the public directory
      }
  ]
}