{
  "version": 2,
  "builds": [
      {
          "src": "api/*.py",
          "use": "@vercel/python"
      }
  ],
  "routes": [
      {
          "src": "/api/(.*)",
          "dest": "api/$1.py"
      },
      {
          "src": "/(.*)",
          "dest": "/index.html" // or "/public/index.html" if in a public folder
      }
  ]
}