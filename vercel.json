{
  "version": 2,
  "builds": [
    { "src": "api/gematria.py", "use": "@vercel/python" },
    { "src": "api/database.py", "use": "@vercel/python" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.css", "use": "@vercel/static" },
    { "src": "*.js", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/gematria", "dest": "api/gematria.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "MONGO_URI": "@mongo_uri"
  }
}